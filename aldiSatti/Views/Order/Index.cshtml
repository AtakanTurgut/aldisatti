@using aldiSatti.Models
@model  IEnumerable<AdminOrder>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Sipariş Listesi</h3>
                </div><!-- /.box-header -->
                <br />
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Sipariş Id</th>
                                <th>Sipariş Numarası</th>
                                <th>Sipariş Tarihi</th>
                                <th>Sipariş Durumu</th>
                                <th>Toplam Tutar (₺)</th>
                                <th>Ürün Sayısı</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.id</td>
                                    <td>
                                        @item.orderNumber
                                    </td>
                                    <td>
                                        @item.orderDate
                                    </td>
                                    <td>
                                        @item.orderState
                                    </td>
                                    <td>
                                        @item.total
                                    </td>
                                    <td>
                                        @item.count
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" href="@Url.Action("Details", new { id = item.id })"> Sipariş Detay</a>
                                    </td>

                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Sipariş Id</th>
                                <th>Sipariş Numarası</th>
                                <th>Sipariş Tarihi</th>
                                <th>Sipariş Durumu</th>
                                <th>Toplam Tutar (₺)</th>
                                <th>Ürün Sayısı</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>

