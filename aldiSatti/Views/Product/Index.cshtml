@model IEnumerable<aldiSatti.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Ürün Listesi</h3>
                </div><!-- /.box-header -->
                <br />
                <a class="btn btn-primary btn-block" href="@Url.Action("Create")">Yeni Ürün Ekle</a>
                <br />
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Ürün Adı</th>
                                <th>Onaylı</th>
                                <th>Anasayfa</th>
                                <th>Popüler</th>
                                <th>Kategori Adı</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img src="~/Content/Images/@item.image" width="80" height="60" /></td>
                                    <td>
                                        @item.name
                                    </td>
                                    <td>
                                        @if (item.isApproved)
                                        {
                                            <label class="label label-success"><i class="fa-regular fa-circle-check"></i> Evet</label>
                                        }
                                        else
                                        {
                                            <label class="label label-danger"><i class="fa-solid fa-circle-xmark"></i> Hayır</label>
                                        }
                                    </td>
                                    <td>
                                        @if (item.isHome)
                                        {
                                            <label class="label label-success"><i class="fa-regular fa-circle-check"></i> Evet</label>
                                        }
                                        else
                                        {
                                            <label class="label label-danger"><i class="fa-solid fa-circle-xmark"></i> Hayır</label>
                                        }
                                    </td>
                                    <td>
                                        @if (item.isFeatured)
                                        {
                                            <label class="label label-success"><i class="fa-regular fa-circle-check"></i> Evet</label>
                                        }
                                        else
                                        {
                                            <label class="label label-danger"><i class="fa-solid fa-circle-xmark"></i> Hayır</label>
                                        }
                                    </td>
                                    <td>
                                        @item.Category.name
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.id })"><i class="fa fa-fw fa-edit"></i> Düzenle</a>
                                        <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.id })"><i class="fa fa-fw fa-trash-o"></i> Sil</a>
                                    </td>

                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Resim</th>
                                <th>Ürün Adı</th>
                                <th>Onayla</th>
                                <th>Anasayfa</th>
                                <th>Popüler</th>
                                <th>Kategori Adı</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>
